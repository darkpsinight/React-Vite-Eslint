{
	"extends": [
		"airbnb",
		"airbnb/hooks",
		"eslint:recommended",
		"prettier",
		"plugin:jsx-a11y/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"env": {
		"browser": true,
		"es6": true
	},
	"rules": {
	        "no-unused-vars":"warn",
		"react/react-in-jsx-scope": 0,
		"react-hooks/rules-of-hooks": "error",
		"no-console": 0,
		"react/state-in-constructor": 0,
		"indent": 0,
		"linebreak-style": 0,
		"react/prop-types": 0,
		"jsx-a11y/click-events-have-key-events": 0,
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js", ".jsx"]
			}
		],
		"prettier/prettier": [
			"warn",
			{
				"trailingComma": "none",
				"singleQuote": true,
				"printWidth": 100,
				"tabWidth": 4,
				"semi": false,
				"endOfLine": "auto"
			}
		],
		"arrow-body-style": "off"
	},
	"plugins": ["prettier", "react", "react-hooks"]
}
